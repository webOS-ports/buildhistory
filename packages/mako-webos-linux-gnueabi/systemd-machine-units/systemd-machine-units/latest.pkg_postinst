#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS enable      wifi-macaddr-persister.service     wifi-module-load.service     hcismd.service 

	if [ -z "$D" -a "enable" = "enable" ]; then
		systemctl restart      wifi-macaddr-persister.service     wifi-module-load.service     hcismd.service 
	fi
fi
