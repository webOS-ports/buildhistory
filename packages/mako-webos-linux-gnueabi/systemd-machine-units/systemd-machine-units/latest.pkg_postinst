#!/bin/sh
set -e
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl daemon-reload
	fi

	systemctl $OPTS enable wifi-macaddr-persister.service wifi-module-load.service hciattach.service dev-ttyHS99.device

	if [ -z "$D" -a "enable" = "enable" ]; then
		systemctl --no-block restart wifi-macaddr-persister.service wifi-module-load.service hciattach.service dev-ttyHS99.device
	fi
fi
