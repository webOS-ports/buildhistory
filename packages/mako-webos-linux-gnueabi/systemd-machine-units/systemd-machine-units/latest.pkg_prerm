#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop      wifi-macaddr-persister.service     wifi-module-load.service     hcismd.service 
	fi

	systemctl $OPTS disable      wifi-macaddr-persister.service     wifi-module-load.service     hcismd.service 
fi
