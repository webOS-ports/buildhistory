#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS enable configurator.service configurator-async.service

	if [ -z "$D" -a "enable" = "enable" ]; then
		systemctl restart configurator.service configurator-async.service
	fi
fi
