#!/bin/sh
set -e
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop configurator-activity.service configurator-db8.service
	fi

	systemctl $OPTS disable configurator-activity.service configurator-db8.service
fi
