#!/bin/sh
set -e
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop anbox-container-manager.service anbox-session-manager.service
	fi

	systemctl $OPTS disable anbox-container-manager.service anbox-session-manager.service
fi
