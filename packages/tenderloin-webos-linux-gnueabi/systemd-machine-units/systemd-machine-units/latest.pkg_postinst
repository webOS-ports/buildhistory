#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS enable tenderloin-ath6kl-module.service tenderloin-swap.service

	if [ -z "$D" -a "enable" = "enable" ]; then
		systemctl restart tenderloin-ath6kl-module.service tenderloin-swap.service
	fi
fi
