#!/bin/sh
set -e
if systemctl >/dev/null 2>/dev/null; then
	OPTS=""

	if [ -n "$D" ]; then
		OPTS="--root=$D"
	fi

	if [ "enable" = "enable" ]; then
		for service in configurator-activity.service configurator-db8.service; do
			systemctl ${OPTS} enable "$service"
		done
	fi

	if [ -z "$D" ]; then
		systemctl daemon-reload
		systemctl preset configurator-activity.service configurator-db8.service

		if [ "enable" = "enable" ]; then
			systemctl --no-block restart configurator-activity.service configurator-db8.service
		fi
	fi
fi
