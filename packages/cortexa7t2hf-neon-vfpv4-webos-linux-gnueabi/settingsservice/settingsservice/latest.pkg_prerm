#!/bin/sh
set -e
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop settings-service-recovery.service settings-service.service
	fi

	systemctl $OPTS disable settings-service-recovery.service settings-service.service
fi
