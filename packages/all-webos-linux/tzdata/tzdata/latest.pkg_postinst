    etc_lt=${LOCALTIME_LOCATION:-/var/luna/preferences/localtime}\n    src=${TIMEZONE_LOCATION:-/var/luna/preferences/timezone}\n\n    if [ -e ${src} ] ; then\n        tz=$(sed -e \'s:#.*::\' -e \'s:[[:space:]]*::g\' -e \'/^$/d\' "${src}")\n    fi\n\n    if [ -z ${tz} ] ; then\n        return 0\n    fi\n\n    if [ ! -e "$D/usr/share/zoneinfo/${tz}" ] ; then\n        echo "You have an invalid TIMEZONE setting in ${src}"\n        echo "Your ${etc_lt} has been reset to Universal; enjoy!"\n        tz="Universal"\n        echo "Updating ${etc_lt} with $D/usr/share/zoneinfo/${tz}"\n        if [ -L ${etc_lt} ] ; then\n            rm -f "${etc_lt}"\n        fi\n        ln -s "/usr/share/zoneinfo/${tz}" "${etc_lt}"\n    fi\n