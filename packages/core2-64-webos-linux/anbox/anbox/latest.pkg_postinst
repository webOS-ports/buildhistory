#!/bin/sh
set -e
if type systemctl >/dev/null 2>/dev/null; then
	OPTS=""

	if [ -n "$D" ]; then
		OPTS="--root=$D"
	fi

	if [ "enable" = "enable" ]; then
		for service in anbox-container-manager.service anbox-session-manager.service; do
			case "${service}" in
			*@*)
				systemctl ${OPTS} enable "${service}"
				;;
			esac
		done
	fi

	if [ -z "$D" ]; then
		systemctl daemon-reload
		systemctl preset anbox-container-manager.service anbox-session-manager.service

		if [ "enable" = "enable" ]; then
			systemctl --no-block restart anbox-container-manager.service anbox-session-manager.service
		fi
	fi
fi
