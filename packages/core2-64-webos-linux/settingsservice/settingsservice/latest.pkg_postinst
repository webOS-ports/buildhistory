#!/bin/sh
set -e
if systemctl >/dev/null 2>/dev/null; then
	OPTS=""

	if [ -n "$D" ]; then
		OPTS="--root=$D"
	fi

	if [ "enable" = "enable" ]; then
		for service in settings-service.service settings-service-recovery.service; do
			systemctl ${OPTS} enable "$service"
		done
	fi

	if [ -z "$D" ]; then
		systemctl daemon-reload
		systemctl preset settings-service.service settings-service-recovery.service

		if [ "enable" = "enable" ]; then
			systemctl --no-block restart settings-service.service settings-service-recovery.service
		fi
	fi
fi
